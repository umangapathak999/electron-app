{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "dist-electron",
    "rootDir": "electron",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",      // <-- change this
    "types": ["node", "electron"]        // <-- add this
  },
  "include": ["electron"]
}

